generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////////

enum UserRole {
  ADMIN
  STUDENT
  ALUMNI
}

enum SocialPlatform {
  LinkedIn
  GitHub
  Portfolio
  Personal
  Facebook
  Twitter
  ResearchGate
  Other
}

enum EmploymentType {
  Full_time
  Part_time
  Internship
  Freelance
  Contract
  Other

  @@map("employment_type")
}

//////////////////////////////////////////////////////
// USERS
//////////////////////////////////////////////////////

model User {
  id          String   @id @db.Uuid
  reg_number  String   @unique @db.VarChar(20)
  email       String   @unique @db.VarChar(255)
  google_id   String   @unique @db.VarChar(255)
  first_name  String   @db.VarChar(50)
  middle_name String?  @db.VarChar(100)
  last_name   String   @db.VarChar(50)
  residence   String?  @db.VarChar(255)
  role        UserRole
  profile_pic String?
  header_img  String?
  headline    String?  @db.VarChar(255)
  bio         String?  @db.VarChar(1000)
  created_at  DateTime @default(now()) @db.Timestamptz()
  updated_at  DateTime @updatedAt @db.Timestamptz()

  // Relations
  socialLinks  SocialLink[]
  projects     Project[]
  experiences  Experience[]
  educations   Education[]
  publications Publication[]

  @@index([email])
  @@map("users")
}

//////////////////////////////////////////////////////
// SOCIAL LINKS
//////////////////////////////////////////////////////

model SocialLink {
  id       String         @id @db.Uuid
  user_id  String         @db.Uuid
  platform SocialPlatform
  url      String         @db.Text

  created_at DateTime @default(now()) @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("social_links")
}

//////////////////////////////////////////////////////
// PROJECTS
//////////////////////////////////////////////////////

model Project {
  id          String    @id @db.Uuid
  user_id     String    @db.Uuid
  title       String    @db.VarChar(255)
  start_date  DateTime? @db.Date
  end_date    DateTime? @db.Date
  description String?   @db.Text
  link        String?   @db.Text

  created_at DateTime @default(now()) @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("projects")
}

//////////////////////////////////////////////////////
// EXPERIENCE
//////////////////////////////////////////////////////

model Experience {
  id          String         @id @db.Uuid
  user_id     String         @db.Uuid
  title       String         @db.VarChar(255)
  emp_type    EmploymentType
  company     String         @db.VarChar(255)
  start_date  DateTime       @db.Date
  end_date    DateTime?      @db.Date
  location    String?        @db.VarChar(255)
  description String?        @db.Text

  created_at DateTime @default(now()) @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("experiences")
}

//////////////////////////////////////////////////////
// EDUCATION
//////////////////////////////////////////////////////

model Education {
  id             String    @id @db.Uuid
  user_id        String    @db.Uuid
  institution    String    @db.VarChar(255)
  degree         String?   @db.VarChar(255)
  field_of_study String?   @db.VarChar(255)
  start_date     DateTime? @db.Date
  end_date       DateTime? @db.Date
  grade          String?   @db.VarChar(80)

  created_at DateTime @default(now()) @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("educations")
}

//////////////////////////////////////////////////////
// PUBLICATIONS
//////////////////////////////////////////////////////

model Publication {
  id             String    @id @db.Uuid
  user_id        String    @db.Uuid
  title          String    @db.VarChar(255)
  journal        String?   @db.VarChar(255)
  published_date DateTime? @db.Date
  link           String?   @db.Text

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("publications")
}
